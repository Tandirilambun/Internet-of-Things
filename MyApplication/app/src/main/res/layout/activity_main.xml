<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_lembab"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Kelembaban"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_status" />

    <TextView
        android:id="@+id/label_dht"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:text="DHT"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_lembab" />

    <TextView
        android:id="@+id/txtView_valueStatus"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_valueLembab"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_lembab"
        app:layout_constraintTop_toBottomOf="@+id/txtView_valueStatus" />

    <TextView
        android:id="@+id/label_status"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="84dp"
        android:text="Status"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/buttonPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/label_dht"
        app:layout_constraintTop_toBottomOf="@+id/txtView_valueLembab" />

</androidx.constraintlayout.widget.ConstraintLayout>